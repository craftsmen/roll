language: ruby
rvm: <%= RUBY_VERSION %>

sudo: false

addons:
  - postgresql: '9.3'

cache: bundler

before_install:
  - "echo 'gem: --no-document' > ~/.gemrc"
  - "echo '--colour' > ~/.rspec"
  - export DISPLAY=:99.0
  - sh -e /etc/init.d/xvfb start

before_script:
  - cp .sample.env .env
  - bundle exec rake db:create db:schema:load RAILS_ENV=test

notifications:
  email: false
